{
  "name": "yegame-prediction-platform",
  "version": "1.0.0",
  "description": "Korean prediction market platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint js/ routes/ middleware/ --ext .js",
    "lint:fix": "eslint js/ routes/ middleware/ --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:reset": "rm -f database/yegame.db && node -e \"require('./database/init').initDatabase()\"",
    "build": "npm run lint && npm run test"
  },
  "keywords": ["prediction", "market", "korean", "betting"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  }
}